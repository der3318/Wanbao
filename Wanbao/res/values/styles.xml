<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="MyTheme" parent="android:Theme.Holo.Light">
         <item name="android:actionBarStyle">@style/MyActionBar</item>
         <item name="android:background">#fff</item>
         <item name="android:textColor">#826249</item>
   	</style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
         <item name="android:titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
         <item name="android:background">#fff</item>
         <item name="android:icon">@android:color/transparent</item>
         <item name="android:height">@dimen/bar_height</item>
    </style>
    <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    	<item name="android:textColor">#826249</item>
    	<item name="android:textColorPrimary">#826249</item>
    	<item name="android:textSize">26sp</item>
    	<item name="android:fontFamily">SERIF</item>
    	<item name="android:textStyle">bold</item>
	</style>
	<style name="NoActionBarTheme" parent="@android:style/Theme.Holo.Light">
	    <item name="android:actionBarStyle">@style/NoActionBar</item>
	</style>
	<style name="NoActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
         <item name="android:height">0dp</item>
    </style>
    
</resources>
