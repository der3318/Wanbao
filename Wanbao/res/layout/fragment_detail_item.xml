<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#816047"
    android:orientation="vertical" >

    <!-- image -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#816047"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/detail_iv_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="5sp"
                android:contentDescription="@string/item_iv_img"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_not_found" />

            <!-- description tab -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1sp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/detail_tv_itemDescriptionTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#816047"
                    android:gravity="center"
                    android:paddingBottom="1sp"
                    android:paddingTop="1sp"
                    android:text="@string/detail_tv_itemDescriptionTab"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- description -->

            <TextView
                android:id="@+id/detail_tv_itemDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingTop="5sp"
                android:paddingEnd="2sp"
                android:paddingStart="2sp"
                android:textColor="#000000"
                android:textSize="20sp" />

            <!-- itemDetail tab -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1sp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/detail_tv_itemDetail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#816047"
                    android:gravity="center"
                    android:paddingBottom="1sp"
                    android:paddingTop="1sp"
                    android:text="@string/detail_tv_itemDetail"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- price -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30sp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/detail_tv_priceTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="@string/detail_tv_priceTab"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/detail_tv_price2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="@string/detail_tv_price"
                    android:textColor="#ff0000"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- itemQt -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30sp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/detail_tv_itemQtTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="@string/detail_tv_itemQtTab"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/detail_tv_itemQt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="@string/detail_tv_price"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- shop info tab -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1sp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/detail_tv_shopInfoTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#816047"
                    android:gravity="center"
                    android:padding="2sp"
                    android:text="@string/detail_tv_shopInfoTab"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- shop name -->

            <TextView
                android:id="@+id/detail_tv_shopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                android:text="@string/detail_tv_price"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- shop description -->

            <TextView
                android:id="@+id/detail_tv_shopDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingEnd="2sp"
                android:paddingStart="2sp"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>